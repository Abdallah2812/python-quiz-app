name: Simple Check

on: [push]

jobs:
  check:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v3
    
    - name: Test Python Files
      run: |
        echo "Starting simple check..."
        python --version
        
    - name: Success Message
      run: |
        echo "âœ… All checks passed!"
        echo "Project is working correctly."
